        <property
          name="hibernate.show_sql"
          value="true"/>      
        <property
          name="hibernate.format_sql"
          value="false"/>
        <property 
          name="hibernate.use_sql_comments" 
          value="false"/>
        <property
          name="hibernate.cache.provider_class"
          value="org.hibernate.cache.NoCacheProvider"/>         
              
      </properties>     
    </persistence-unit>
	
