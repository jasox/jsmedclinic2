<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
                                  http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
              version="2.0">

    <name>MedWardApplication</name>
      
    <navigation-rule>
      <from-view-id>/home.xhtml</from-view-id>
      
      <navigation-case>
        <from-action>#{customAuthenticator.login}</from-action>
        <if>#{currentUser.loggedIn}</if>
        <to-view-id>/search.xhtml</to-view-id>
        <redirect/>
      </navigation-case>

      <navigation-case>
        <from-action>#{customAuthenticator.login}</from-action>
        <from-outcome>failed</from-outcome>
        <to-view-id>/home.xhtml</to-view-id>
      </navigation-case>

      <navigation-case>            
        <to-view-id>/search.xhtml</to-view-id>
        <redirect/>
      </navigation-case>
               
    </navigation-rule> 
       
    
    <navigation-rule>
      <from-view-id>/search.xhtml</from-view-id>        

      <navigation-case>            
        <to-view-id>/home.xhtml</to-view-id>
        <redirect/>
      </navigation-case>
       
    </navigation-rule>
    

    <navigation-rule>
      <from-view-id>/register.xhtml</from-view-id>

      <navigation-case>
        <from-action>#{registrar.register}</from-action>
        <if>#{registrar.registered}</if>
        <to-view-id>/home.xhtml</to-view-id>
        <redirect/>
      </navigation-case>
        
    </navigation-rule>
    

    <navigation-rule>
      <from-view-id>/password.xhtml</from-view-id>

      <navigation-case>
        <from-action>#{passwordManager.changePassword}</from-action>
        <if>#{passwordManager.changed}</if>
        <to-view-id>/account.xhtml</to-view-id>
        <redirect/>
      </navigation-case>

    </navigation-rule>

    <application>
      
      <locale-config>
			  <default-locale>en</default-locale>
			  <supported-locale>pl</supported-locale>			  
		  </locale-config>
      
      <resource-bundle>
        <base-name>i18n.messages</base-name>
        <var>msg</var>
      </resource-bundle>
      <!--
      <message-bundle>messages</message-bundle>
      -->
    </application>
    
</faces-config>
