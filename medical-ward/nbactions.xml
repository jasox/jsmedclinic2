<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <goals>
                <goal>package</goal>
            </goals>
            <properties>
                <netbeans.deploy>true</netbeans.deploy>
            </properties>
            <activatedProfiles>
                <activatedProfile>glassfish</activatedProfile>
                <activatedProfile>aws_MySQL</activatedProfile>
            </activatedProfiles>
        </action>
        <action>
            <actionName>test</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>test</goal>
            </goals>
            <properties>
                
                <arquillian>glassfish-remote-3.1</arquillian>
            </properties>
        </action>
        <action>
            <actionName>test.single</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>test-compile</goal>
                <goal>surefire:test</goal>
            </goals>
            <properties>
                <test>${packageClassName}</test>
            </properties>
            <activatedProfiles>
                <activatedProfile>glassfish-remote-3.1</activatedProfile>
            </activatedProfiles>
        </action>
        <action>
            <actionName>build</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>install</goal>
            </goals>
            <activatedProfiles>
                <activatedProfile>aws_MySQL</activatedProfile>
                <activatedProfile>glassfish</activatedProfile>
            </activatedProfiles>
        </action>
        <action>
            <actionName>rebuild</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>clean</goal>
                <goal>install</goal>
            </goals>
            <activatedProfiles>
                <activatedProfile>aws_MySQL</activatedProfile>
                <activatedProfile>glassfish</activatedProfile>
            </activatedProfiles>
        </action>
        <action>
            <actionName>CUSTOM-jboss-as-deploy</actionName>
            <displayName>jboss-as7-deploy</displayName>
            <goals>
                <goal>jboss-as:deploy</goal>
            </goals>
            <activatedProfiles>
                <activatedProfile>aws_MySQL</activatedProfile>
                <activatedProfile>jbossas7</activatedProfile>
            </activatedProfiles>
        </action>
        <action>
            <actionName>CUSTOM-glassfish-deploy</actionName>
            <displayName>glassfish3-deploy</displayName>
            <goals>
                <goal>cargo:deploy</goal>
            </goals>
            <activatedProfiles>
                <activatedProfile>aws_MySQL</activatedProfile>
                <activatedProfile>glassfish</activatedProfile>
            </activatedProfiles>
        </action>
</actions>
